<div class="panel-body">
  <strong>Commenter:</strong>
  <%= comment.commenter %><br>

  <strong>Comment:</strong>
  <%= comment.body %>

  <% if can? :destroy, comment %>
    <p><%= link_to 'Delete this comment', [comment.article, comment], method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <% end %>
</div>

